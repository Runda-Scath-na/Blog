@Model BlogViewModel

<div class="col-md-5">
    @{ViewBag.Title = "New Post";}
    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>
</div>

<div class="col-md-7">
    <form role="form">
        <div class="form-group">
            <label>
                Post Name
            </label>
            <input type="text" name="postName" class="form-control" />
        </div>
        <div class="form-group">
            <label>
                Post Tease
            </label>
            <textarea name="postTease" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label>
                Post Body
            </label>
            <textarea name="postBody" class="form-control" rows="10"></textarea>
        </div>
        <input type="submit" id="submit" class="btn btn-primary" />
        <a class="btn btn-danger" id="cancel" href="Index">Cancel</a>
    </form>
</div>